<article id="interview">
	<figure><img src="/images/portraits/<%= @interview.slug %>.jpg" width="500" height="335" class="portrait" alt="<%= @interview.name %>"></figure>

	<h2 class="person"><%= @interview.name %></h2>
	<p class="summary"><%= @interview.summary %></p>
	<p class="details">
		<% if @interview.published_on %>
		Posted <time datetime="<%= @interview.published_on.strftime('%FT%TZ') %>"><%= @interview.published_on %> in
		<% else %>
		Unpublished, filed in
		<% end %>
		<% for category in @interview.categories %>
			<a href="/interviews/<%= category.slug %>/" rel="<%= category.slug %>" title="View all of the '<%= category.slug %>' interviews."><%= category.slug %></a>
		<% end %>
	</p>

	<%= markdown(interview_markdown(@interview)) %>